<!DOCTYPE html>
<html>
  <head>
    <title id="titletimedisp">Work</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script defer src="javascripts/main.js"></script>
  </head>
  <body>

    <header>
      <%- include('partials/header.ejs') %>
    </header>

    <main id="workpg">
      <div id="pomodoro">
        <h1 id="timedisplay">--:--</h1>
        <button id="workbtn">Start Work</button>
        <button id="breakbtn">Start Break</button>
      </div>
      <div id="selection">
      <div>
        <div id="projdisp">
          <% projects.forEach(function(p) { %>
            <h4> <%= p.name %></h4>
          <% }) %>
        </div>
        <div id="taskdisp"></div>
      </div>
      </div>

    </main>

    <footer>
      <%- include('partials/footer.ejs') %>
    </footer>
    
  </body>
</html>